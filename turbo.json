{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"codegen:validate": {},
		"codegen": {
			"outputs": ["**/*.codegen.*"],
			"dependsOn": ["codegen:validate"]
		},
		"build": {
			"dependsOn": ["^build", "codegen"],
			"outputs": [
				"dist/**",
				".next/**",
				"!.next/cache/**",
				".docusaurus/**",
				"build/**",
				"public/**"
			]
		},
		"prepack": {
			"dependsOn": ["build"]
		},
		"test:type": {
			"dependsOn": ["^build", "codegen"]
		},
		"test": {
			"dependsOn": ["test:type"]
		},
		"lint:fix": {
			"inputs": ["./**/*.{json,yml,yaml,js,jsx,ts,tsx}"],
			"outputs": ["./**/*.{json,yml,yaml,js,jsx,ts,tsx}"]
		},
		"lint": {
			"inputs": ["./**/*.{json,yml,yaml,js,jsx,ts,tsx}"]
		},
		"dev": {
			"dependsOn": ["^build", "codegen"],
			"cache": false,
			"persistent": true
		},
		"test:watch": {
			"dependsOn": ["^build", "codegen"],
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		}
	}
}
