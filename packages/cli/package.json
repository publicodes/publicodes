{
	"name": "@publicodes/cli",
	"version": "2.0.0-alpha.0",
	"description": "A CLI tool for Publicodes",
	"type": "module",
	"bin": {
		"publicodes2": "./bin/publicodes.js"
	},
	"scripts": {
		"clean": "rm -rf bin dist",
		"build:compiler": "bun ./scripts/build-compiler.ts",
		"codegen:dev": "run build:compiler",
		"build": "rolldown -c",
		"dev": "rolldown -c -w",
		"postinstall": "[ -d ./bin/compiler ] && chmod +x ./bin/compiler/* || true"
	},
	"files": [
		"bin"
	],
	"devDependencies": {
		"@types/bun": "^1",
		"bun": "^1.2.22",
		"rolldown": "1.0.0-beta.36"
	}
}
