{
  "name": "@publicodes/tools",
  "version": "1.7.2",
  "description": "A CLI tool for Publicodes",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "publicodes": "./bin/run.js"
  },
  "files": [
    "dist",
    "bin",
    "quick-doc"
  ],
  "author": "Johan Girod <johan@calinou.coop>",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "clean": "rm -rf dist",
    "test:type": "tsc --noEmit"
  },
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "tsup": {
    "entry": "src/index.ts",
    "format": [
      "esm"
    ],
    "sourceMap": true,
    "dts": true,
    "clean": true,
    "cjsInterop": true
  },
  "publishConfig": {
    "access": "public"
  }
}
