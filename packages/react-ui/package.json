{
	"name": "publicodes-react",
	"version": "1.0.0-beta.30",
	"description": "UI to explore publicodes computations",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"license": "MIT",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"prepare": "yarn run build:mecanisms",
		"clean": "rimraf dist node_modules data",
		"build": "tsup source/index.tsx --format cjs,esm --dts --inject ./react-shim.js --sourcemap",
		"build:watch": "tsup source/index.tsx --format cjs,esm --watch --inject ./react-shim.js --sourcemap  ",
		"test": "echo \"Error: no test specified\""
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"styled-components": "^5.1.0"
	},
	"peerDependencies": {
		"publicodes": "1.0.0-beta.30",
		"react": "^17.0.2"
	},
	"devDependencies": {
		"@types/react": "^17.0.0",
		"@types/styled-components": "^5.1.10",
		"tsup": "^5.11.11",
		"typescript": "^4.5.5"
	}
}
