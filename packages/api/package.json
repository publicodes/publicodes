{
	"name": "publicodes-api",
	"version": "1.0.0-beta.0",
	"description": "Publicodes API",
	"main": "dist/index.js",
	"scripts": {
		"test": "yarn validate && yarn vitest",
		"validate": "yarn swagger-cli validate ./source/openapi.yaml",
		"start": "yarn build:watch & nodemon ./example.ts",
		"build": "yarn build:openapi ; yarn build:ts",
		"build:watch": "yarn build:openapi && yarn build:openapi:watch & yarn build:ts:watch --preserveWatchOutput",
		"build:ts": "tsc",
		"build:ts:watch": "tsc -w",
		"build:openapi": "yarn run swagger-cli bundle ./source/openapi.yaml > ./source/openapi.json",
		"build:openapi:watch": "nodemon -w ./source/openapi.yaml -x \"yarn build:openapi\"",
		"clean": "rm -rf dist ./source/openapi.json"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/betagouv/publicodes.git",
		"directory": "packages/api"
	},
	"author": "",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/betagouv/publicodes/issues"
	},
	"homepage": "https://github.com/betagouv/publicodes#readme",
	"dependencies": {
		"@koa/cors": "^3.3.0",
		"@koa/router": "^10.1.1",
		"koa": "^2.13.4",
		"koa-body": "^5.0.0",
		"openapi-validator-middleware": "^3.2.6"
	},
	"peerDependencies": {
		"publicodes": "1.0.0-beta.35"
	},
	"devDependencies": {
		"@apidevtools/swagger-cli": "^4.0.4",
		"@types/koa": "^2.13.4",
		"@types/koa__cors": "^3.3.0",
		"@types/koa__router": "^8.0.11",
		"@types/node": "^17.0.29",
		"chai-http": "^4.3.0",
		"nodemon": "^2.0.15",
		"publicodes": "1.0.0-beta.35",
		"ts-node": "^10.7.0",
		"typescript": "next",
		"vitest": "^0.12.3"
	}
}
