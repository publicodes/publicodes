{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "build",
		"rootDir": "src",
        "types": ["node", "jest"],
		"esModuleInterop": true,
		"lib": [
			"es2021"
		],
		"sourceMap":true,
		"module": "commonjs"
	},
	"ts-node": {
		"transpileOnly": true,
		"files": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["./node_modules/", "./build/", "./jest.config.js", "./test/"]
}
