{
	"name": "publicodes",
	"version": "1.0.0-beta.34",
	"description": "A declarative language for encoding public algorithm",
	"types": "dist/index.d.ts",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/betagouv/publicodes.git",
		"directory": "core"
	},
	"bugs": "https://github.com/betagouv/publicodes/issues",
	"homepage": "https://publi.codes/",
	"license": "MIT",
	"files": [
		"dist/"
	],
	"devDependencies": {
		"@types/chai": "^4.3.0",
		"@types/mocha": "^9.1.0",
		"@types/sinon-chai": "^3.2.8",
		"chai": "^4.2.0",
		"dedent-js": "1.0.1",
		"intl": "^1.2.5",
		"mocha": "^9.2.0",
		"rimraf": "^3.0.2",
		"sinon": "^12.0.1",
		"sinon-chai": "^3.7.0",
		"ts-node": "^10.4.0",
		"tsup": "^5.11.13",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"moo": "^0.5.1",
		"nearley": "^2.19.2",
		"yaml": "^1.9.2"
	},
	"scripts": {
		"build:grammar": "nearleyc ./source/grammar.ne -o ./source/grammar.js",
		"build": "run build:grammar && tsup",
		"start": "run build --watch",
		"prepack": "yarn run build",
		"test:type": "run build:grammar && run tsc",
		"test": "run build:grammar && mocha \"./test/**/*.test.{js,ts}\"",
		"clean": "rimraf dist node_modules source/grammar.js"
	},
	"engines": {
		"node": ">=12.16.1"
	},
	"peerDependencies": {
		"@types/mocha": "^9.0.0"
	}
}
