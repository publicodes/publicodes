{
	"name": "publicodes-monorepo",
	"private": true,
	"workspaces": [
		"packages/core",
		"packages/react-ui"
	],
	"scripts": {
		"test": "yarn workspaces run test",
		"test:type": "yarn workspaces run tsc",
		"lint:prettier": "yarn run prettier --check \"**/*.{js,jsx,ts,tsx,yaml,yml}\"",
		"lint:prettier:fix": "yarn lint:prettier --write",
		"prepare": "yarn run --silent js-yaml ./packages/react-ui/source/data/mecanisms.yaml >| ./packages/react-ui/source/data/mecanisms.json"
	},
	"dependencies": {},
	"devDependencies": {
		"prettier": "^2.3.2"
	}
}
