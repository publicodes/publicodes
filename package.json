{
	"name": "publicodes-monorepo",
	"private": true,
	"workspaces": [
		"packages/core",
		"packages/react-ui",
		"website"
	],
	"scripts": {
		"test": "yarn workspaces run test",
		"test:type": "yarn workspaces run tsc",
		"lint:prettier": "yarn run prettier --check \"**/*.{js,jsx,ts,tsx,yaml,yml}\"",
		"lint:prettier:fix": "yarn lint:prettier --write",
		"prepare": "yarn workspace publicodes run prepare",
		"start": "concurrently --kill-others  \"yarn workspace publicodes run build --watch\" \"yarn workspace publicodes-react run build --watch\" \"yarn workspace website run start\""
	},
	"dependencies": {},
	"devDependencies": {
		"concurrently": "^7.0.0",
		"prettier": "^2.5.1"
	}
}
